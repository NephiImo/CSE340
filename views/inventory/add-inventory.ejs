<main class="inv-form-container">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <%- messages() %>

  <!-- Server-side validation errors (express-validator format) -->
  <% if (errors && errors.array) { %>
    <ul class="notice">
      <% errors.array().forEach(err => { %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-inventory" method="POST" class="inv-form" novalidate>
    <!-- classification select (built by utilities and passed in) -->
    <label for="classificationList">Classification</label>
    <div><%- classificationList %></div>

    <label for="inv_make">Make</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      minlength="2"
      value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
    />

    <label for="inv_model">Model</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      minlength="1"
      value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
    />

    <label for="inv_year">Year</label>
    <input
      type="text"
      id="inv_year"
      name="inv_year"
      required
      pattern="^[0-9]{4}$"
      title="Use a 4-digit year, e.g. 2020"
      value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
    />

    <label for="inv_description">Description</label>
    <textarea
      id="inv_description"
      name="inv_description"
      required
      minlength="10"
    ><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

    <label for="inv_price">Price (e.g. 1999.99)</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      step="0.01"
      min="0"
      required
      value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
    />

    <label for="inv_miles">Mileage (integer)</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      step="1"
      min="0"
      required
      value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
    />

    <label for="inv_image">Image Path</label>
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/no-image-available.png' %>"
    />
    <p class="hint">Use full relative path in your images folder (e.g. /images/vehicles/abc.jpg) or use the default no-image path.</p>

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/no-image-available-tn.png' %>"
    />

    <button type="submit" class="btn">Add Vehicle</button>
  </form>
</main>