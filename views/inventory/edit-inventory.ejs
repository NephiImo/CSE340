  <main class="inv-form-container">
    <h1><%= title %></h1>

    <!-- flash messages (connect-flash) -->
    <%- messages() %>

    <!-- server-side validation errors (express-validator) -->
    <% if (errors && errors.array) { %>
      <div class="form-errors">
        <ul>
          <% errors.array().forEach(err => { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <section class="register-card">
      <form action="/inv/update" method="POST" class="inv-form" autocomplete="on">

        <!-- classification select (built by utilities) -->
        <div>
          <label for="classificationList">Classification</label>
          <div id="classificationSelect"><%- classificationList %></div>
          <p class="hint">Choose the classification the vehicle belongs to.</p>
        </div>

        <!-- Make -->
        <div>
          <label for="inv_make">Make</label>
          <input
            type="text"
            id="inv_make"
            name="inv_make"
            required
            minlength="3"
            value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
            placeholder="Min of 3 characters"
          />
        </div>

        <!-- Model -->
        <div>
          <label for="inv_model">Model</label>
          <input
            type="text"
            id="inv_model"
            name="inv_model"
            required
            minlength="3"
            value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
            placeholder="Min of 3 characters"
          />
        </div>

        <!-- Description -->
        <div>
          <label for="inv_description">Description</label>
          <textarea
            id="inv_description"
            name="inv_description"
            required
            minlength="10"
            placeholder="Write a short description (min 10 chars)"
          ><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
        </div>

        <!-- Image Path -->
        <div>
          <label for="inv_image">Image Path</label>
          <input
            type="text"
            id="inv_image"
            name="inv_image"
            required
            value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>"
            placeholder="/images/vehicles/example.jpg"
          />
        </div>

        <!-- Thumbnail Path -->
        <div>
          <label for="inv_thumbnail">Thumbnail Path</label>
          <input
            type="text"
            id="inv_thumbnail"
            name="inv_thumbnail"
            required
            value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image.png' %>"
            placeholder="/images/vehicles/example-tn.jpg"
          />
        </div>

        <!-- Price -->
        <div>
          <label for="inv_price">Price</label>
          <input
            type="number"
            id="inv_price"
            name="inv_price"
            required
            step="0.01"
            min="0"
            value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
            placeholder="decimal or integer"
          />
        </div>

        <!-- Year -->
        <div>
          <label for="inv_year">Year</label>
          <input
            type="text"
            id="inv_year"
            name="inv_year"
            required
            pattern="^[0-9]{4}$"
            inputmode="numeric"
            value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
            placeholder="4-digit year"
            title="Enter a 4-digit year, e.g. 2020"
          />
        </div>

        <!-- Miles -->
        <div>
          <label for="inv_miles">Miles</label>
          <input
            type="number"
            id="inv_miles"
            name="inv_miles"
            required
            step="1"
            min="0"
            value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
            placeholder="digits only"
          />
        </div>

        <!-- Color -->
        <div>
          <label for="inv_color">Color</label>
          <input
            type="text"
            id="inv_color"
            name="inv_color"
            required
            minlength="2"
            value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"
            placeholder="Color"
          />
        </div>

        <div>
          <button type="submit" class="btn">Update Vehicle</button>
        </div>
      </form>
    </section>
  </main>