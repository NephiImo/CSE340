<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Flash messages -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
<% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname %> <%= accountData.account_lastname %></h2>
<h3>Account Type: <%= accountData.account_type  %></h3>

<section class="account-logged-in-message">
  <p>You are now logged in.</p>
  <a href="/account/update/<%= accountData.account_id %>" title="Click to update your account information">Edit Account Information</a>

  <% if(accountData.account_type == 'Employee' || accountData.account_type == 'Admin'){ %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p> 
  <% } %>