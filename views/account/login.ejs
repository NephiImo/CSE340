<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Flash messages -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
<% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>


<section class="account-login-container">
  <form action="/account/login" method="POST" class="login-form">

    <label for="account_email">Email:</label>
    <input 
      type="email" 
      id="account_email" 
      name="account_email" 
      required
    />

    <label for="account_password">Password:</label>
    <input 
      type="password" 
      id="account_password" 
      name="account_password" 
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    />
    <p class="hint">Password must be at least 12 characters and include 1 uppercase letter, 1 number, and 1 special character.</p>

    <button type="submit" class="login-btn">Login</button>
  </form>

  <p class="signup-message">
    No account? <a href="/account/register">Sign-up</a>
  </p>
</section>
<script src="/js/script.js"></script>